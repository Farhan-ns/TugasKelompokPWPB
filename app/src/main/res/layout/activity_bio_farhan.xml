<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191919"
    android:padding="@dimen/activity_margin"
    tools:context=".bio.farhan.BioFarhanActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:rowCount="3">

        <ImageView
            android:layout_column="0"
            android:layout_rowSpan="3"
            android:layout_marginRight="25dp"
            android:minWidth="@dimen/min_max_image_size"
            android:minHeight="@dimen/min_max_image_size"
            android:maxHeight="@dimen/min_max_image_size"
            android:maxWidth="@dimen/min_max_image_size"
            android:tint="@color/colorPrimaryText"
            android:src="@drawable/ic_person_black_36dp"/>

        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/bio_name_farhan"/>
        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/bio_position_farhan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorSecondaryText"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:text="@string/bio_address_farhan"/>
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:text=" Jl. Gatsu Pussenkav Blok C No. 221"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:text=" 0878-2241-0243"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:text="@string/bio_farhan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Skills"/>

    <GridLayout
        android:orientation="horizontal"
        android:columnCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:tint="@color/colorIconOverlay"
            android:src="@drawable/java"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:tint="@color/colorIconOverlay"
            android:src="@drawable/php"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:tint="@color/colorIconOverlay"
            android:src="@drawable/jsx"/>


    </GridLayout>

</LinearLayout>